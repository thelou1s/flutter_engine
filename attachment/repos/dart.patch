+  if ((events & kMove) != 0) {
+    list_events |= IN_MOVE;
+  }
+  const char* resolved_path = File::GetCanonicalPath(namespc, path);
+  path = resolved_path != NULL ? resolved_path : path;
+  int path_id = NO_RETRY_EXPECTED(inotify_add_watch(id, path, list_events));
+  if (path_id < 0) {
+    return -1;
+  }
+  return path_id;
