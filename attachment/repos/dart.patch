+int SocketBase::GetType(intptr_t fd) {
+  struct stat64 buf;
+  int result = TEMP_FAILURE_RETRY(fstat64(fd, &buf));
+  if (result == -1) {
+    return -1;
+  }
+  if (S_ISCHR(buf.st_mode)) {
+    return File::kTerminal;
+  }
+  if (S_ISFIFO(buf.st_mode)) {
+    return File::kPipe;
+  }
+  if (S_ISREG(buf.st_mode)) {
+    return File::kFile;
+  }
+  return File::kOther;
+}
